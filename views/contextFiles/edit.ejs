<% layout('layouts/dashboard') %>
<% title = 'Edit Context File' %>

<h2 class="mb-4">📝 Edit Context File</h2>

<form method="POST" action="/<%= orgName %>/context-files/<%= file._id %>?_method=PUT" class="card p-4 shadow-sm">
  <div class="mb-3">
    <label for="title" class="form-label fw-bold">📄 Title</label>
    <input name="title" id="title" class="form-control" value="<%= file.title %>" required>
  </div>

  <div class="mb-3">
    <label for="description" class="form-label fw-bold">🧾 Description</label>
    <input name="description" id="description" class="form-control" value="<%= file.description %>">
  </div>

  <div class="mb-3">
    <label for="content" class="form-label fw-bold">📚 Content</label>
    <textarea name="content" id="content" rows="12" class="form-control" required><%= file.content %></textarea>
    <small class="form-text text-muted">Make sure the content is relevant and clean. This will be indexed for assistant responses.</small>
  </div>

  <div class="text-end mt-4">
    <button class="btn btn-success">💾 Update File</button>
  </div>
</form>
