<% layout('layouts/dashboard') %>
<% title = 'Upload Context File' %>

<h2 class="mb-4">📝 Upload Context File</h2>

<form method="POST" action="/<%= orgName %>/context-files" enctype="multipart/form-data" class="card p-4 shadow-sm">
  <div class="mb-3">
    <label class="form-label fw-bold">📄 Title <span class="text-danger">*</span></label>
    <input name="title" class="form-control" required>
  </div>

  <div class="mb-3">
    <label class="form-label fw-bold">🧾 Description</label>
    <input name="description" class="form-control">
  </div>

  <div class="mb-4">
    <label class="form-label fw-bold">📋 Paste Content</label>
    <textarea name="content" rows="10" class="form-control" placeholder="Paste plain text or markdown here..."></textarea>
    <small class="form-text text-muted">This will be indexed and used for assistant responses.</small>
  </div>

  <div class="mb-4">
    <label class="form-label fw-bold">📎 Or Upload a Word File (.docx)</label>
    <input type="file" name="docxFile" accept=".docx" class="form-control">
    <small class="form-text text-muted">We'll automatically extract the text content for you.</small>
  </div>

  <div class="text-end">
    <button type="submit" class="btn btn-success">💾 Save Context</button>
  </div>
</form>