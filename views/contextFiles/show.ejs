<% layout('layouts/dashboard') %>

<h2>👁️ <%= file.title %></h2>
<p class="text-muted"><%= file.description %></p>
<p><small class="text-muted">🕒 Uploaded on: <%= file.createdAt.toDateString() %></small></p>

<hr>
<pre class="bg-light p-3 border rounded" style="white-space: pre-wrap;"><%= file.content %></pre>

<a href="/<%= orgName %>/context-files" class="btn btn-secondary mt-3">⬅️ Back</a>
