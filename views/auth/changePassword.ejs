<% layout('layouts/dashboard') %>
<% title = 'Change Password' %>

<h2 class="mb-4 text-gradient">ğŸ”’ Change Password</h2>

<form method="POST" action="/<%= orgName %>/auth/change-password" class="card p-4 shadow-sm border-0 animated-form" onsubmit="return checkPasswordsMatch()">
  <div class="mb-3">
    <label class="form-label funky-label">ğŸ”‘ Current Password</label>
    <input type="password" name="currentPassword" class="form-control input-pop" required>
  </div>

  <div class="mb-3">
    <label class="form-label funky-label">ğŸ†• New Password</label>
    <input type="password" id="newPassword" name="newPassword" class="form-control input-pop" required>
  </div>

  <div class="mb-3">
    <label class="form-label funky-label">ğŸ” Confirm New Password</label>
    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control input-pop" required>
    <small id="matchMsg" class="form-text mt-1"></small>
  </div>

  <div class="text-end mt-4">
    <button class="btn btn-primary px-4 py-2">ğŸ” Change Password</button>
  </div>
</form>

<script>
  function checkPasswordsMatch() {
    const pw = document.getElementById('newPassword').value;
    const cpw = document.getElementById('confirmPassword').value;
    const msg = document.getElementById('matchMsg');
    if (pw !== cpw) {
      msg.innerText = "âŒ Passwords do not match!";
      msg.style.color = "#e63946";
      return false;
    }
    return true;
  }

  document.getElementById('confirmPassword').addEventListener('input', () => {
    const pw = document.getElementById('newPassword').value;
    const cpw = document.getElementById('confirmPassword').value;
    const msg = document.getElementById('matchMsg');
    if (!cpw) {
      msg.innerText = "";
      return;
    }
    msg.innerText = pw === cpw ? "âœ… Passwords match" : "âŒ Passwords do not match";
    msg.style.color = pw === cpw ? "#28a745" : "#e63946";
  });
</script>
