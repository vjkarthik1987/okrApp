<% layout('layouts/dashboard') %>
<% title = 'Key Results for ' + objective.title %>

<h2 class="mb-4">ğŸ¯ Key Results for: <%= objective.title %></h2>

<a href="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/new" class="btn btn-primary mb-3">â• Add Key Result</a>
<a href="/<%= orgName %>/objectives/" class="btn btn-outline-secondary mb-3">â¬…ï¸ Back to Objectives</a>

<% if (keyResults.length === 0) { %>
  <div class="alert alert-warning">No key results yet.</div>
<% } else { %>
  <table class="table table-hover align-middle">
    <thead class="table-light sticky-top">
      <tr>
        <th>Title</th>
        <th>Target</th>
        <th>Progress</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% keyResults.forEach(kr => { %>
        <tr>
          <td>
            <strong><%= kr.title %></strong>
            <a href="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/<%= kr._id %>" title="View Key Result">ğŸ‘ï¸</a>
            <a href="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/<%= kr._id %>/initiatives" class="btn btn-sm btn-outline-primary">ğŸ“‹ View Initiatives</a>
          </td>

          <td><%= kr.targetValue || 'â€”' %></td>

          <td>
            <% if (kr.metricType === 'milestone') { %>
              <span class="badge bg-info">ğŸ¯ Milestone</span>
            <% } else { %>
              <div class="progress" style="height: 18px;">
                <div class="progress-bar" role="progressbar" style="width: <%= kr.progressValue %>%;">
                  <%= kr.progressValue %>%
                </div>
              </div>
            <% } %>
          </td>

          <td><%= kr.dueDate ? kr.dueDate.toDateString() : 'â€”' %></td>

          <td>
            <a href="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/<%= kr._id %>/edit" class="btn btn-sm btn-outline-secondary">âœï¸ Edit</a>
            <form method="POST" action="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/<%= kr._id %>/delete" style="display:inline;">
              <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Really delete this KR? ğŸ˜±')">ğŸ—‘ Delete</button>
            </form>
          </td>
        </tr>

        <tr>
          <td colspan="5">
            <% if (kr.metricType === 'milestone' && kr.milestones.length > 0) { %>
              <form method="POST" action="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/<%= kr._id %>/milestones/save">
                <div class="row">
                  <% kr.milestones.forEach((m, i) => { %>
                    <div class="col-md-6">
                      <label class="form-check-label d-flex align-items-center gap-2">
                        <input type="checkbox" name="milestones[<%= i %>][completed]" <%= m.completed ? 'checked' : '' %> />
                        <span><%= m.completed ? 'âœ…' : 'ğŸ•“' %> <%= m.label %> (<%= m.weight %>%)</span>
                      </label>
                      <input type="hidden" name="milestones[<%= i %>][label]" value="<%= m.label %>">
                    </div>
                  <% }) %>
                </div>
                <div class="row mt-3">
                  <div class="col-md-4">
                    <select name="weekCycle" class="form-select form-select-sm" required>
                      <option value="">ğŸ“… Week</option>
                      <% weekCycles.forEach(wc => { %>
                        <option value="<%= wc._id %>"><%= wc.label %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="col-md-2">
                    <button type="submit" class="btn btn-success btn-sm">ğŸ’¾ Save Milestones</button>
                  </div>
                </div>
              </form>              
            <% } else { %>  
              <form action="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/<%= kr._id %>/update" method="POST" class="row g-2 align-items-center mt-2 mb-3">
                <div class="col-sm-2">
                  <input type="number" step="any" name="updateValue" class="form-control form-control-sm" required placeholder="Progress" />
                </div>
                <div class="col-sm-4">
                  <input type="text" name="updateText" class="form-control form-control-sm" placeholder="Optional note" />
                </div>
                <div class="col-sm-4">
                  <select name="weekCycle" class="form-select form-select-sm" required>
                    <option value="">ğŸ“… Week</option>
                    <% weekCycles.forEach(wc => { %>
                      <option value="<%= wc._id %>"><%= wc.label %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-sm-2 text-end">
                  <button type="submit" class="btn btn-sm btn-success w-100">âœ… Update</button>
                </div>
              </form>              
            <% } %>

            <% if (kr.updates && kr.updates.length > 0) { %>
              <ul class="small text-muted mt-2 mb-0">
                <% [...kr.updates].reverse().forEach((upd, realIndex) => { %>
                  <li>
                    <%= upd.updateDate.toDateString() %>: <strong><%= upd.updateValue %></strong> 
                    (<%= upd.updateText || 'No note' %>)
                    <form method="POST" action="/<%= orgName %>/objectives/<%= objective._id %>/keyresults/<%= kr._id %>/updates/<%= realIndex %>/delete" style="display:inline">
                      <button type="submit" class="btn btn-sm btn-outline-danger btn-link p-0" onclick="return confirm('Delete this update?')">ğŸ—‘</button>
                    </form>
                  </li>
                <% }) %>
              </ul>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<style>
  .table-hover tbody tr:hover {
    background-color: #fff8e1;
    transition: background 0.2s ease;
  }
  .progress {
    border-radius: 20px;
    overflow: hidden;
    background-color: #eee;
  }
  .progress-bar {
    font-weight: bold;
    background: linear-gradient(90deg, #6C5CE7, #FF6B6B);
    color: white;
  }
  .btn-link:hover {
    color: #FF6B6B !important;
  }
</style>
