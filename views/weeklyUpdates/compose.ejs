<% layout('layouts/dashboard') %>
<% title = 'ğŸ§¾ Compose Weekly Summary' %>

<h2 class="mb-4 text-gradient">ğŸ§¾ Compose Weekly Summary for <%= weekLabel %></h2>

<% if (success && success.length > 0) { %>
  <div class="alert alert-success funky-label"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="alert alert-danger funky-label"><%= error %></div>
<% } %>

<form method="POST" action="/<%= orgName %>/weeklyUpdates/ai-summary" class="animated-form">
  <input type="hidden" name="teamId" value="<%= teamId %>">
  <input type="hidden" name="weekCycle" value="<%= draftUpdate.weekCycle %>">

  <div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <button type="button" id="generateSummaryBtn" class="btn btn-outline-primary btn-sm d-none">ğŸ§  Generate AI KR Summary</button>
      <span id="summaryStatus" class="text-muted small"></span>
    </div>
    <label class="form-label funky-label">ğŸ“ˆ Key Result (KR) Progress Summary</label>
    <textarea id="okrSummary" name="okrSummary" rows="5" class="form-control input-pop" placeholder="Summarize KR progress..."><%= draftUpdate.okrSummary || '' %></textarea>
  </div>

  <div class="mb-4">
    <label class="form-label funky-label">âœ… Action Items Summary</label>
    <textarea name="actionItemSummary" rows="4" class="form-control input-pop" placeholder="Progress on Action Items..."><%= draftUpdate.actionItemSummary || '' %></textarea>
  </div>

  <div class="mb-4">
    <label class="form-label funky-label">ğŸ“˜ Diary Themes</label>
    <input type="text" name="diaryThemes" class="form-control input-pop" value="<%= draftUpdate.diaryThemes.join(', ') %>" placeholder="e.g. Collaboration, AI, Client Escalations">
  </div>

  <div class="mb-4">
    <label class="form-label funky-label">ğŸ“˜ Diary Summary</label>
    <textarea name="diarySummary" rows="4" class="form-control input-pop" placeholder="What patterns emerged in diary entries?"><%= draftUpdate.diarySummary || '' %></textarea>
  </div>

  <button type="submit" class="btn btn-success">ğŸ’¾ Submit Weekly Summary</button>
</form>

<hr class="my-5">
<h4 class="text-gradient">ğŸ“Š Auto-Extracted Data</h4>

<h5>ğŸ¯ Objectives</h5>
<ul class="ps-3">
  <% objectives.forEach(obj => { %>
    <li><strong><%= obj.title %></strong></li>
  <% }) %>
</ul>

<h5>ğŸ“ Key Results</h5>
<ul class="ps-3">
  <% keyResults.forEach(kr => { %>
    <li><%= kr.title %> â€“ <%= kr.progressValue %>%</li>
  <% }) %>
</ul>

<h5>ğŸ“‹ Action Items</h5>
<ul class="ps-3">
  <% actionItems.forEach(ai => { %>
    <li><%= ai.title %> â€“ <%= ai.status %></li>
  <% }) %>
</ul>

<h5>ğŸ“ Diary Submissions</h5>
<p><%= draftUpdate.diaryEntryStats.submitted %> submitted out of <%= draftUpdate.diaryEntryStats.totalExpected %> expected</p>

<% if (teamUsers && draftUpdate.diaryEntryStats.nonCompliant.length > 0) { %>
  <h6 class="text-danger">â— Non-Compliant:</h6>
  <ul class="ps-3">
    <% teamUsers
        .filter(u => draftUpdate.diaryEntryStats.nonCompliant.includes(u._id.toString()))
        .forEach(u => { %>
      <li><%= u.name %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Spinner Overlay -->
<div id="loadingOverlay">
  <div class="spinner"></div>
</div>

<style>
  #loadingOverlay {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(255, 255, 255, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }
  .spinner {
    border: 6px solid #eee;
    border-top: 6px solid #6C5CE7;
    border-radius: 50%;
    width: 50px; height: 50px;
    animation: spin 1s linear infinite;
  }
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<script>
  document.getElementById('generateSummaryBtn')?.addEventListener('click', async () => {
    const btn = document.getElementById('generateSummaryBtn');
    const status = document.getElementById('summaryStatus');
    const textarea = document.getElementById('okrSummary');

    btn.disabled = true;
    status.textContent = 'Generating summary...';

    try {
      const response = await fetch(`/<%= orgName %>/weeklyUpdates/ai-summary`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          teamId: "<%= teamId %>",
          okrCycleId: "<%= keyResults[0]?.cycle %>",
          weekCycleId: "<%= draftUpdate.weekCycle %>"
        })
      });

      const data = await response.json();
      if (data.summary) {
        textarea.value = data.summary;
        status.textContent = 'âœ” Summary generated';
      } else {
        status.textContent = 'âŒ Failed to generate summary';
      }
    } catch (err) {
      console.error(err);
      status.textContent = 'âŒ Error generating summary';
    } finally {
      btn.disabled = false;
    }
  });

  document.addEventListener('DOMContentLoaded', async () => {
    const textarea = document.getElementById('okrSummary');
    const status = document.getElementById('summaryStatus');
    const overlay = document.getElementById('loadingOverlay');

    try {
      const response = await fetch(`/<%= orgName %>/weeklyUpdates/ai-summary`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          teamId: "<%= teamId %>",
          okrCycleId: "<%= keyResults[0]?.cycle %>",
          weekCycleId: "<%= draftUpdate.weekCycle %>"
        })
      });

      const data = await response.json();
      if (data.summary) {
        textarea.value = data.summary;
        status.textContent = 'âœ” Summary generated';
      } else {
        status.textContent = 'âŒ Failed to generate summary';
      }
    } catch (err) {
      console.error(err);
      status.textContent = 'âŒ Error generating summary';
    } finally {
      overlay.style.display = 'none';
    }
  });
</script>
