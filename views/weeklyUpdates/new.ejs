<% layout('layouts/dashboard') %>
<% title = 'Generate Weekly Summary' %>

<h2 class="mb-4 text-gradient">ğŸ“˜ Generate Team Weekly Summary</h2>

<% if (success && success.length > 0) { %>
  <div class="alert alert-success funky-label"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="alert alert-danger funky-label"><%= error %></div>
<% } %>

<form method="POST" action="/<%= orgName %>/weeklyUpdates/generate" class="animated-form">
  <div class="row mb-4">
    <div class="col-md-6">
      <label for="teamId" class="form-label funky-label">ğŸ‘¥ Team</label>
      <select name="teamId" id="teamId" class="form-select input-pop" required>
        <option value="">-- Select Team --</option>
        <% teams.forEach(team => { %>
          <option value="<%= team._id %>"><%= team.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-6">
      <label for="weekCycle" class="form-label funky-label">ğŸ“† Week Cycle</label>
      <select name="weekCycle" id="weekCycle" class="form-select input-pop" required>
        <option value="">-- Select Week --</option>
        <% weekCycles.forEach(wc => { %>
          <option value="<%= wc._id %>"><%= wc.label %></option>
        <% }) %>
      </select>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">âœ¨ Generate Summary</button>
</form>

<% if (preview) { %>
  <hr class="my-5">
  <h4 class="text-gradient">ğŸ” Preview</h4>

  <p><strong>Team:</strong> <%= preview.teamName %></p>
  <p><strong>Week:</strong> <%= preview.weekLabel %></p>

  <h5 class="mt-4">ğŸ¯ Objectives</h5>
  <ul class="ps-3">
    <% preview.objectives.forEach(obj => { %>
      <li><%= obj.title %></li>
    <% }) %>
  </ul>

  <h5 class="mt-4">ğŸ“Š Key Results</h5>
  <ul class="ps-3">
    <% preview.keyResults.forEach(kr => { %>
      <li><%= kr.title %> â€“ <%= kr.progressValue %>%</li>
    <% }) %>
  </ul>

  <h5 class="mt-4">ğŸ“‹ Action Items</h5>
  <ul class="ps-3">
    <% preview.actionItems.forEach(ai => { %>
      <li><%= ai.title %> â€“ <%= ai.status %></li>
    <% }) %>
  </ul>

  <h5 class="mt-4">ğŸ“ Diary Entries</h5>
  <ul class="ps-3">
    <% preview.diaryEntries.forEach(entry => { %>
      <li><%= entry.userName %>: <%= entry.summary %></li>
    <% }) %>
  </ul>

  <% if (preview.nonCompliantUsers.length > 0) { %>
    <h5 class="mt-4 text-danger">ğŸš« Non-Compliant Users</h5>
    <ul class="ps-3">
      <% preview.nonCompliantUsers.forEach(u => { %>
        <li><%= u.name %></li>
      <% }) %>
    </ul>
  <% } %>
<% } %>
