<% layout('layouts/dashboard') %>
<% title = 'Edit Initiative' %>

<h2>✏️ Edit Initiative</h2>

<form action="/<%= orgName %>/initiatives/<%= initiative._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" value="<%= initiative.title %>" required>
  </div>

  <div class="mb-3">
    <label for="description">Description</label>
    <textarea name="description" class="form-control"><%= initiative.description %></textarea>
  </div>

  <div class="mb-3">
    <label for="expectedOutcome">Expected Outcome</label>
    <textarea name="expectedOutcome" class="form-control"><%= initiative.expectedOutcome %></textarea>
  </div>

  <div class="mb-3">
    <label for="outcomeAchieved">Outcome Achieved</label>
    <textarea name="outcomeAchieved" class="form-control"><%= initiative.outcomeAchieved %></textarea>
  </div>

  <div class="mb-3">
    <label for="status">Status</label>
    <select name="status" class="form-control">
      <% ['Initiated', 'Closed', 'Deferred/On Hold', 'Blocked', 'Dropped'].forEach(statusOption => { %>
        <option value="<%= statusOption %>" <%= initiative.status === statusOption ? 'selected' : '' %>><%= statusOption %></option>
      <% }) %>
    </select>
  </div>

  <button type="submit" class="btn btn-success mt-3">💾 Update</button>
  <a href="/<%= orgName %>/initiatives/<%= initiative._id %>" class="btn btn-outline-secondary mt-3">⬅ Cancel</a>
</form>
