        <tr>
          <td><%= i.title %></td>
          <td><%= i.expectedOutcome %></td>
          <td><span class="badge bg-secondary"><%= i.status %></span></td>
          <td><%= i.keyResultId?.title || 'â€”' %></td>
          <td>
            <a href="/<%= orgName %>/initiatives/<%= i._id %>" class="btn btn-sm btn-outline-primary">View</a>
            <a href="/<%= orgName %>/initiatives/<%= i._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>