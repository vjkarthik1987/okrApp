<% layout('layouts/dashboard') %>
<% title = 'Initiatives' %>

<h2 class="mb-4">ğŸ“Œ All Initiatives</h2>
<a href="/<%= orgName %>/initiatives/new" class="btn btn-success mb-3">â• Create New Initiative</a>

<% if (initiatives.length === 0) { %>
  <div class="alert alert-warning">No initiatives created yet.</div>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Expected Outcome</th>
          <th>Status</th>
          <th>Key Result</th>
          <th style="width: 160px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% initiatives.forEach(i => { %>
          <tr>
            <td><strong><%= i.title %></strong></td>
            <td class="text-muted" style="max-width: 300px;"><%= i.expectedOutcome.length > 120 ? i.expectedOutcome.slice(0, 120) + '...' : i.expectedOutcome %></td>
            <td>
              <% let statusColor = {
                'Initiated': 'info',
                'Closed': 'success',
                'Deferred/On Hold': 'secondary',
                'Blocked': 'danger',
                'Dropped': 'dark'
              }[i.status] || 'light'; %>
              <span class="badge bg-<%= statusColor %>"><%= i.status %></span>
            </td>
            <td><%= i.keyResultId?.title || 'â€”' %></td>
            <td>
              <a href="/<%= orgName %>/initiatives/<%= i._id %>" class="btn btn-sm btn-outline-primary me-1">ğŸ‘ï¸</a>
              <a href="/<%= orgName %>/initiatives/<%= i._id %>/edit" class="btn btn-sm btn-outline-secondary">âœï¸</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>