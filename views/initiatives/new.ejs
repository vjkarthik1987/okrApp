<form action="/<%= orgName %>/initiatives" method="POST">
    <div class="mb-3">
        <label for="keyResultId">Key Results</label>
        <select name="keyResultId" id="keyResultId" class="form-control">
            <option value="">-- Select Key Result --</option>
            <% keyResults.forEach(kr => { %>
                <option value="<%= kr._id %>" <%= (kr._id.toString() === preselectedKeyResultId) ? 'selected' : '' %>>
                <%= kr.title %>
                </option>
            <% }) %>
        </select> 
    </div>

    <div class="mb-3">
        <label for="title">Title <span class="text-danger">*</span></label>
        <input type="text" name="title" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="description">Description</label>
        <textarea name="description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label for="expectedOutcome">Expected Outcome <span class="text-danger">*</span></label>
        <textarea name="expectedOutcome" class="form-control" rows="2" required></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-2">âœ… Create Initiative</button>
    <a href="/<%= orgName %>/objectives" class="btn btn-outline-secondary mt-2">â¬… Cancel</a>
</form>