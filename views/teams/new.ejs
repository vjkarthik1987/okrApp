<% layout('layouts/dashboard') %>
<% title = 'Create Team' %>

<h2 class="mb-4">â• Create New Team</h2>

<form action="/<%= orgName %>/teams" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label funky-label">ğŸ·ï¸ Team Name</label>
    <input type="text" name="name" id="name" class="form-control input-pop" required placeholder="e.g., Product Engineering">
  </div>

  <div class="mb-3">
    <label for="parentTeam" class="form-label funky-label">ğŸ§© Parent Team (optional)</label>
    <select name="parentTeam" id="parentTeam" class="form-select input-pop">
      <option value="">None</option>
      <% allTeams.forEach(t => { %>
        <option value="<%= t._id %>" <%= preselectedParentTeamId && t._id.toString() === preselectedParentTeamId ? 'selected' : '' %>>
          <%= t.name %>
        </option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label for="functionHead" class="form-label funky-label">ğŸ‘¤ Function Head</label>
    <select name="functionHead" id="functionHead" class="form-select input-pop">
      <option value="">Select</option>
      <% users.forEach(u => { %>
        <option value="<%= u._id %>"><%= u.name %> (<%= u.email %>)</option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label for="okrEditors" class="form-label funky-label">âœï¸ OKR Editors</label>
    <select name="okrEditors" id="okrEditors" class="form-select input-pop" multiple>
      <% users.forEach(u => { %>
        <option value="<%= u._id %>"><%= u.name %> (<%= u.email %>)</option>
      <% }) %>
    </select>
    <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple users.</small>
  </div>

  <button type="submit" class="btn btn-success mt-3">âœ… Create Team</button>
  <a href="/<%= orgName %>/teams" class="btn btn-outline-secondary mt-3 ms-2">â¬… Back</a>
</form>
