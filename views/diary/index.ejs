<% layout('layouts/dashboard') %>
<% title = 'My Diary Entries' %>

<h2 class="mb-4">ğŸ““ Diary Entries</h2>

<!-- Scope Tabs -->
<ul class="nav nav-tabs mb-4 border-bottom border-2">
  <li class="nav-item">
    <a class="nav-link <%= scope === 'my' ? 'active' : '' %>" href="/<%= orgName %>/diary?scope=my&weeks=<%= weeksFilter %>">ğŸ‘¤ <strong>My Diaries</strong></a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= scope === 'team' ? 'active' : '' %>" href="/<%= orgName %>/diary?scope=team&weeks=<%= weeksFilter %>">ğŸ‘¥ <strong>Team Diaries</strong></a>
  </li>
  <% if (user.isSuperAdmin) { %>
    <li class="nav-item">
      <a class="nav-link <%= scope === 'org' ? 'active' : '' %>" href="/<%= orgName %>/diary?scope=org&weeks=<%= weeksFilter %>">ğŸ¢ <strong>Org Diaries</strong></a>
    </li>
  <% } %>
</ul>

<!-- Filters -->
<div class="d-flex align-items-center justify-content-between mb-3">
  <form id="filtersForm" method="GET" action="/<%= orgName %>/diary" class="d-flex gap-3 align-items-center">
    <input type="hidden" name="scope" value="<%= scope %>">
    <label class="me-2 fw-semibold">Weeks:</label>
    <select name="weeks" class="form-select" onchange="this.form.submit()">
      <option value="4" <%= weeksFilter == 4 ? 'selected' : '' %>>Last 4 Weeks</option>
      <option value="8" <%= weeksFilter == 8 ? 'selected' : '' %>>Last 8 Weeks</option>
      <option value="all" <%= weeksFilter == 'all' ? 'selected' : '' %>>All Time</option>
    </select>
  </form>

  <% if (scope === 'my') { %>
    <a href="/<%= orgName %>/diary/new" class="btn btn-primary">â• New Entry</a>
  <% } %>
</div>

<!-- Diary Entries Table -->
<div class="table-responsive">
  <table class="table table-bordered table-hover align-middle">
    <thead class="table-dark sticky-top">
      <tr>
        <% if (scope !== 'my') { %><th>ğŸ‘¤ Employee</th><% } %>
        <th>ğŸ“† Week</th>
        <th>ğŸ•’ Date</th>
        <th>ğŸ“„ Entry</th>
        <% if (scope === 'my') { %><th>âš™ï¸ Actions</th><% } %>
      </tr>
    </thead>
    <tbody>
      <% if (entries.length === 0) { %>
        <tr>
          <td colspan="<%= scope === 'my' ? 5 : 4 %>" class="text-center text-muted">No diary entries found.</td>
        </tr>
      <% } else { %>
        <% entries.forEach(entry => { %>
          <tr>
            <% if (scope !== 'my') { %>
              <td>
                <strong><%= entry.user?.name || 'Unknown' %></strong><br>
                <small class="text-muted"><%= entry.user?.email || '' %></small>
              </td>
            <% } %>
            <td><%= entry.weekCycle?.label || '-' %></td>
            <td><%= new Date(entry.date).toDateString() %></td>
            <td>
              <% if (entry.content.length <= 160) { %>
                <%= entry.content %>
              <% } else { %>
                <%= entry.content.substring(0, 160) %>...
                <details class="mt-2">
                  <summary class="text-primary">ğŸ” Read Full</summary>
                  <div class="pt-2" style="white-space: pre-line;"><%= entry.content %></div>
                </details>
              <% } %>
            </td>
            <% if (scope === 'my') { %>
              <td>
                <a href="/<%= orgName %>/diary/<%= entry._id %>/edit" class="btn btn-sm btn-outline-secondary">âœï¸ Edit</a>
                <form method="POST" action="/<%= orgName %>/diary/<%= entry._id %>?_method=DELETE" style="display:inline;" onsubmit="return confirmDelete()">
                  <button type="submit" class="btn btn-sm btn-outline-danger">ğŸ—‘ï¸ Delete</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<script>
function confirmDelete() {
  return confirm('Are you sure you want to delete this diary entry?');
}
</script>
