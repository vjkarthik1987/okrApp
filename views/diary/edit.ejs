<% title = "Edit Diary Entry" %>
<% layout('layouts/dashboard') %>

<h2 class="mb-4">✏️ Edit Diary Entry</h2>

<form action="/<%= orgName %>/diary/<%= entry._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="weekCycleSelect" class="form-label">Select Week</label>
    <select name="weekCycleId" id="weekCycleSelect" class="form-control" required>
      <% weeks.forEach(week => { %>
        <option value="<%= week._id %>" <%= week._id.equals(entry.weekCycle._id) ? 'selected' : '' %>>
          <%= week.label %>
        </option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label for="content" class="form-label">Edit Your Work Summary</label>
    <textarea name="content" id="content" class="form-control" rows="6" required><%= entry.content %></textarea>
  </div>

  <button type="submit" class="btn btn-primary">💾 Update Entry</button>
</form>