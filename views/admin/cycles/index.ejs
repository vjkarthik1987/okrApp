<% layout('layouts/dashboard') %>
<% title = 'Manage OKR Cycles' %>

<h2 class="mb-4">üßë‚Äçüíº Manage OKR Cycles</h2>

<form method="POST" action="/<%= orgName %>/admin/cycles/seed" class="mb-4">
  <div class="row g-2">
    <div class="col-auto">
      <input type="number" name="year" class="form-control" placeholder="Enter Year (e.g., 2026)" required>
    </div>
    <div class="col-auto">
      <button class="btn btn-outline-primary">Generate 4 Quarters</button>
    </div>
  </div>
</form>

<% if (cycles.length === 0) { %>
  <div class="alert alert-warning">No OKR cycles defined yet.</div>
<% } else { %>
  <table class="table table-bordered table-hover">
    <thead class="table-light">
      <tr>
        <th>Cycle Label</th>
        <th>Type</th>
        <th>Start Date</th> <!-- NEW -->
        <th>End Date</th>   <!-- NEW -->
        <th>Enabled?</th>
        <th>Toggle</th>
      </tr>
    </thead>
    <tbody>
      <% cycles.forEach(cycle => { %>
        <tr>
          <td><%= cycle.label %></td>
          <td><%= cycle.type %></td>
          <td><%= cycle.startDate.toDateString() %></td> <!-- NEW -->
          <td><%= cycle.endDate.toDateString() %></td>   <!-- NEW -->
          <td><%= cycle.isEnabled ? '‚úÖ' : '‚ùå' %></td>
          <td>
            <form method="POST" action="/<%= orgName %>/admin/cycles/<%= cycle._id %>/toggle" style="display:inline">
              <button class="btn btn-sm <%= cycle.isEnabled ? 'btn-outline-danger' : 'btn-outline-success' %>">
                <%= cycle.isEnabled ? 'Disable' : 'Enable' %>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>  
<% } %>
