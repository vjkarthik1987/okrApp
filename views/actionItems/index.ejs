<% layout('layouts/dashboard') %>
<% title = 'Action Items' %>

<h2>üìã Action Items</h2>

<style>
  .nav-link {
    padding: 5px;
  }
</style>

<!-- Scope Tabs (My, Team, Org) -->
<ul class="nav nav-tabs mb-4" style="border-bottom: 2px solid #dee2e6;">
  <li class="nav-item">
    <a class="nav-link <%= scope === 'my' ? 'active' : '' %>" 
       href="/<%= orgName %>/actionItems?scope=my&filter=<%= filter %>&level=<%= level %>">
       üë§ <strong>My Items</strong>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= scope === 'team' ? 'active' : '' %>" 
       href="/<%= orgName %>/actionItems?scope=team&filter=<%= filter %>&level=<%= level %>">
       üë• <strong>Team Items</strong>
    </a>
  </li>
  <% if (user.isSuperAdmin) { %>
  <li class="nav-item">
    <a class="nav-link <%= scope === 'org' ? 'active' : '' %>" 
       href="/<%= orgName %>/actionItems?scope=org&filter=<%= filter %>&level=<%= level %>">
       üè¢ <strong>Org Items</strong>
    </a>
  </li>
  <% } %>
</ul>

<!-- Filter Controls -->
<div class="d-flex justify-content-start gap-3 mb-3">
  <form id="filtersForm" class="form-inline" method="GET" action="/<%= orgName %>/actionItems">
    <input type="hidden" name="scope" value="<%= scope %>">
    <input type="hidden" name="page" value="1">

    <div class="form-group me-2">
      <label class="me-1"><strong>Filter:</strong></label>
      <select name="filter" onchange="document.getElementById('filtersForm').submit()" class="form-select">
        <option value="pending" <%= filter === 'pending' ? 'selected' : '' %>>Pending</option>
        <option value="completed" <%= filter === 'completed' ? 'selected' : '' %>>Completed</option>
        <option value="all" <%= filter === 'all' ? 'selected' : '' %>>All</option>
      </select>
    </div>

    <div class="form-group">
      <label class="me-1"><strong>Level:</strong></label>
      <select name="level" onchange="document.getElementById('filtersForm').submit()" class="form-select">
        <option value="3" <%= level == 3 ? 'selected' : '' %>>Up to 3 Levels</option>
        <option value="5" <%= level == 5 ? 'selected' : '' %>>Up to 5 Levels</option>
        <option value="7" <%= level == 7 ? 'selected' : '' %>>Up to 7 Levels</option>
        <option value="10" <%= level == 10 ? 'selected' : '' %>>Up to 10 Levels</option>
      </select>
    </div>
  </form>
</div>

<!-- Action Items Table -->
<table class="table table-bordered table-hover">
  <thead class="table-light">
    <tr>
      <th>Title</th>
      <th>Assigned To</th>
      <th>Meeting</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Cycle</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (actionItems.length === 0) { %>
      <tr><td colspan="7" class="text-center text-muted">No Action Items found.</td></tr>
    <% } else { %>
      <% function renderItem(item, level = 0) { %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <span class="me-2 toggle-updates" data-id="<%= item._id %>" style="cursor: pointer;">‚ñ∂</span>
              <div>
                <div><%= '-'.repeat(level + 1) %> <%= item.title %></div>
                <div id="updates-<%= item._id %>" class="mt-1" style="display: none;">
                  <% if (item.updates && item.updates.length > 0) { %>
                    <ul class="list-group small">
                      <% item.updates.slice().reverse().forEach(update => { %>
                        <li class="list-group-item px-2 py-1 d-flex justify-content-between">
                          <span><%= update.updateText %></span>
                          <small class="text-muted"><%= new Date(update.updateDate).toLocaleString() %></small>
                        </li>
                      <% }) %>
                    </ul>
                  <% } else { %>
                    <div class="text-muted small">No updates yet.</div>
                  <% } %>
                </div>
              </div>
              <a href="/<%= orgName %>/actionItems/<%= item._id %>" class="ms-2" title="View details" style="text-decoration: none;">üîç</a>
            </div>
          </td>        
          <td><%= item.assignedTo?.name || item.assignedTo?.email %></td>
          <td><%= item.meeting || '-' %></td>
          <td><%= item.dueDate ? new Date(item.dueDate).toDateString() : '-' %></td>
          <td>
            <% if (item.status === 'Completed') { %>
              <span class="badge bg-success">‚úÖ Completed</span>
            <% } else if (item.status === 'In Progress') { %>
              <span class="badge bg-warning text-dark">‚è≥ In Progress</span>
            <% } else if (item.status === 'Blocked') { %>
              <span class="badge bg-danger">üö´ Blocked</span>
            <% } else if (item.status === 'Deferred') { %>
              <span class="badge bg-secondary">üïê Deferred</span>
            <% } else if (item.status === 'On Hold') { %>
              <span class="badge bg-info text-dark">‚è∏Ô∏è On Hold</span>
            <% } else { %>
              <span class="badge bg-primary">üÜï Not Started</span>
            <% } %>
          </td>
          <td><%= item.cycle?.label || '-' %></td>
          <td>
            <a href="/<%= orgName %>/actionItems/<%= item._id %>/edit" class="btn btn-sm btn-outline-primary">Update</a>
            <form method="POST" action="/<%= orgName %>/actionItems/<%= item._id %>?_method=DELETE" style="display:inline" onsubmit="return confirmDelete()">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% } %>

      <% actionItems.forEach(item => renderItem(item)) %>
    <% } %>
  </tbody>
</table>

<!-- Pagination Controls -->
<% if (totalPages > 1) { %>
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if (page > 1) { %>
        <li class="page-item">
          <a class="page-link" href="?scope=<%= scope %>&filter=<%= filter %>&level=<%= level %>&page=<%= page - 1 %>">‚¨Ö Previous</a>
        </li>
      <% } %>
      <% if (page < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="?scope=<%= scope %>&filter=<%= filter %>&level=<%= level %>&page=<%= page + 1 %>">Next ‚û°</a>
        </li>
      <% } %>
    </ul>
  </nav>
<% } %>

<!-- JavaScript -->
<script>
  function confirmDelete() {
    return confirm("Are you sure you want to delete this Action Item?");
  }

  document.querySelectorAll('.toggle-updates').forEach(el => {
    el.addEventListener('click', () => {
      const id = el.dataset.id;
      const updatesDiv = document.getElementById(`updates-${id}`);
      if (!updatesDiv) return;

      if (updatesDiv.innerText.trim() === 'No updates yet.') {
        alert('No updates yet for this Action Item.');
        return;
      }

      const isVisible = updatesDiv.style.display === 'block';
      updatesDiv.style.display = isVisible ? 'none' : 'block';
      el.textContent = isVisible ? '‚ñ∂' : '‚ñº';
    });
  });
</script>
