</ul>

<!-- Key Results Table -->
<div class="table-responsive animated-form">
  <table class="table table-hover table-striped align-middle shadow-sm border">
    <thead class="table-light sticky-top">
      <tr>
        <th>ğŸ¯ Title</th>
        <th>ğŸ“Š Progress</th>
        <th>ğŸ“… Due Date</th>
        <th>ğŸ¯ Objective</th>
        <th>ğŸ”§ Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (keyResults.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center text-muted">No Key Results found.</td>
        </tr>
      <% } else { %>
        <% keyResults.forEach(kr => { %>
          <tr>
            <td><%= kr.title %></td>
            <td>
              <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-success" role="progressbar" style="width: <%= kr.progressValue %>%;"></div>
              </div>
              <small><%= kr.progressValue %>%</small>
            </td>
            <td><%= kr.dueDate ? new Date(kr.dueDate).toDateString() : 'â€”' %></td>
            <td><%= kr.objectiveTitle || 'â€”' %></td>
            <td>
              <a href="/<%= orgName %>/objectives/<%= kr.objectiveId %>/keyresults/<%= kr._id %>" class="btn btn-sm btn-outline-info">ğŸ” View</a>
              <a href="/<%= orgName %>/objectives/<%= kr.objectiveId %>/keyresults/<%= kr._id %>/edit" class="btn btn-sm btn-outline-secondary">âœï¸ Edit</a>
