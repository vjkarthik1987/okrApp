<% layout('layouts/dashboard') %>
<% title = 'Objectives' %>

<h2 class="mb-4">üìã Objectives</h2>

<a href="/<%= orgName %>/objectives/new" class="btn btn-primary mb-3">‚ûï Add New Objective</a>

<form method="GET" class="mb-3 d-flex align-items-center gap-2">
  <label for="quarter" class="form-label mb-0">Filter by Cycle:</label>
  <select name="cycle" id="quarter" class="form-select" onchange="this.form.submit()">
    <option value="">All</option>
    <% enabledCycles.forEach(c => { %>
      <option value="<%= c.label %>" <%= c.label === cycle ? 'selected' : '' %>><%= c.label %></option>
    <% }) %>
  </select>  

  <% if (!user.isSuperAdmin) { %>
    <label for="teamFilter" class="form-label mb-0">Team:</label>
    <select name="teamId" id="teamFilter" class="form-select" onchange="this.form.submit()">
      <option value="" <%= !selectedTeamId ? 'selected' : '' %>>All My Teams</option>
      <% accessibleTeams.forEach(team => { %>
        <option value="<%= team._id %>" <%= (selectedTeamId && team._id.toString() === selectedTeamId) ? 'selected' : '' %>><%= team.name %></option>
      <% }) %>
    </select>
  <% } %>
</form>

<% if (objectives.length === 0) { %>
  <div class="alert alert-warning">No objectives found for this organization.</div>
<% } else { %>
  <table class="table table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>Title</th>
        <th>Created By</th>
        <th>Assigned Teams</th>
        <th>Cycle(s)</th>
        <th>Status</th>
        <th>Progress</th>
        <th>Key Results</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% objectives.forEach(obj => { %>
        <tr>
          <td><%= obj.title %></td>
          <td><%= obj.teamId?.name || 'N/A' %></td>
          <td>
            <% if (obj.assignedTeams && obj.assignedTeams.length > 0) { %>
              <ul class="mb-0 ps-3">
                <% obj.assignedTeams.forEach(team => { %>
                  <li><%= team.name %></li>
                <% }) %>
              </ul>
            <% } else { %>
              <span class="text-muted">None</span>
            <% } %>
          </td>
          <td>
            <% if (Array.isArray(obj.cycle)) { %>
              <%= obj.cycle.join(', ') %>
            <% } else { %>
              <%= obj.cycle %>
            <% } %>
          </td>
          <td><%= obj.status %></td>
          <td><%= obj.progressValue %>%</td>
          <td>
            <a href="/<%= orgName %>/objectives/<%= obj._id %>/keyresults" class="btn btn-sm btn-outline-primary">üìà KRs</a>
          </td>
          <td class="text-nowrap">
            <a href="/<%= orgName %>/objectives/<%= obj._id %>/edit" class="btn btn-sm btn-outline-secondary">‚úèÔ∏è Edit</a>
            <form action="/<%= orgName %>/objectives/<%= obj._id %>/delete" method="POST" style="display:inline">
              <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">üóë Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <% objectives.forEach(obj => { %>
    <% if (obj.description) { %>
      <div class="modal fade" id="descModal-<%= obj._id %>" tabindex="-1" aria-labelledby="descLabel-<%= obj._id %>" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="descLabel-<%= obj._id %>">üìù Objective Description</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p><strong><%= obj.title %></strong></p>
              <p><%= obj.description %></p>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  <% }) %>  
<% } %>