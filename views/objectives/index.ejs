<% layout('layouts/dashboard') %>
<% title = 'Objectives' %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="mb-0">📋 Team Objectives</h2>
  <a href="/<%= orgName %>/objectives/new" class="btn btn-primary">➕ New Objective</a>
</div>

<form method="GET" class="row g-3 align-items-end mb-4">
  <div class="col-auto">
    <label for="quarter" class="form-label">Cycle</label>
    <select name="cycle" id="quarter" class="form-select" onchange="this.form.submit()">
      <option value="">All</option>
      <% enabledCycles.forEach(c => { %>
        <option value="<%= c.label %>" <%= c.label === cycle ? 'selected' : '' %>><%= c.label %></option>
      <% }) %>
    </select>
  </div>

  <% if (!user.isSuperAdmin) { %>
    <div class="col-auto">
      <label for="teamFilter" class="form-label">Team</label>
      <select name="teamId" id="teamFilter" class="form-select" onchange="this.form.submit()">
        <option value="" <%= !selectedTeamId ? 'selected' : '' %>>All My Teams</option>
        <% accessibleTeams.forEach(team => { %>
          <option value="<%= team._id %>" <%= (selectedTeamId && team._id.toString() === selectedTeamId) ? 'selected' : '' %>>
            <%= team.name %>
          </option>
        <% }) %>
      </select>
    </div>
  <% } %>
</form>

<% if (objectives.length === 0) { %>
  <div class="alert alert-warning text-center">
    🚫 No objectives found for this cycle. Time to set some bold goals! 💥
  </div>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>🎯 Title</th>
          <th>👤 Created By</th>
          <th>👥 Assigned Teams</th>
          <th>📅 Cycle</th>
          <th>📊 Status</th>
          <th>📈 Progress</th>
          <th>🔑 Key Results</th>
          <th>⚙️ Actions</th>
        </tr>
      </thead>
      <tbody>
        <% objectives.forEach(obj => { %>
          <tr>
            <td><strong><%= obj.title %></strong></td>
            <td><%= obj.teamId?.name || 'N/A' %></td>
            <td>
              <% if (obj.assignedTeams && obj.assignedTeams.length > 0) { %>
                <ul class="mb-0 ps-3">
                  <% obj.assignedTeams.forEach(team => { %>
                    <li><%= team.name %></li>
                  <% }) %>
                </ul>
              <% } else { %>
                <span class="text-muted">—</span>
              <% } %>
            </td>
            <td>
              <% if (Array.isArray(obj.cycle)) { %>
                <%= obj.cycle.join(', ') %>
              <% } else { %>
                <%= obj.cycle %>
              <% } %>
            </td>
            <td>
              <% if (obj.status === 'On Track') { %>
                <span class="badge bg-success">🟢 On Track</span>
              <% } else if (obj.status === 'At Risk') { %>
                <span class="badge bg-warning text-dark">🟡 At Risk</span>
              <% } else if (obj.status === 'Off Track') { %>
                <span class="badge bg-danger">🔴 Off Track</span>
              <% } else { %>
                <span class="badge bg-secondary"><%= obj.status %></span>
              <% } %>
            </td>
            <td>
              <div class="progress" style="height: 20px;">
                <div class="progress-bar 
                    <%= obj.progressValue >= 75 ? 'bg-success' : obj.progressValue >= 50 ? 'bg-info' : obj.progressValue >= 25 ? 'bg-warning text-dark' : 'bg-danger' %>"
                    role="progressbar" style="width: <%= obj.progressValue %>%;">
                  <%= obj.progressValue %>%
                </div>
              </div>
            </td>
            <td>
              <a href="/<%= orgName %>/objectives/<%= obj._id %>/keyresults" class="btn btn-sm btn-outline-primary">📈 KRs</a>
            </td>
            <td class="text-nowrap">
              <a href="/<%= orgName %>/objectives/<%= obj._id %>/edit" class="btn btn-sm btn-outline-secondary">✏️ Edit</a>
              <form action="/<%= orgName %>/objectives/<%= obj._id %>/delete" method="POST" style="display:inline">
                <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">🗑 Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <% objectives.forEach(obj => { %>
    <% if (obj.description) { %>
      <div class="modal fade" id="descModal-<%= obj._id %>" tabindex="-1" aria-labelledby="descLabel-<%= obj._id %>" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="descLabel-<%= obj._id %>">📝 Objective Description</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p><strong><%= obj.title %></strong></p>
              <p><%= obj.description %></p>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  <% }) %>
<% } %>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  const highlightId = urlParams.get('highlight');
  if (highlightId) {
    const modal = new bootstrap.Modal(document.getElementById(`descModal-${highlightId}`));
    modal.show();
  }
</script>
