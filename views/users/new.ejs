<% layout('layouts/dashboard') %>
<% title = 'Add Users' %>

<h2 class="mb-4 text-gradient">â• Add Users (Bulk)</h2>

<form id="userUploadForm" method="POST" action="/<%= orgName %>/users" enctype="multipart/form-data" class="animated-form">
  <div class="form-text text-warning mb-3">
    âš¡ Tip: Please paste text OR upload a CSV â€” not both.
  </div>

  <!-- Paste Input -->
  <div class="mb-4">
    <label class="form-label funky-label">ğŸ“ Paste User Data (one per line)</label>
    <textarea name="bulkUsers" rows="8" class="form-control input-pop" placeholder="e.g. John Doe, john@example.com, employee, Mumbai, Developer, B2, Male, 2024-05-01, Manager Name, Team"></textarea>
  </div>

  <!-- CSV Upload -->
  <div class="mb-4">
    <label class="form-label funky-label">ğŸ“ Upload CSV File</label>
    <input type="file" name="csvFile" accept=".csv" class="form-control input-pop">
    <div class="form-text mt-2">
      Format: Name, Email, Role, Location, Designation, Band, Gender, JoiningDate (YYYY-MM-DD), ManagerName (optional), Team
    </div>
  </div>

  <button type="submit" class="btn btn-success">ğŸš€ Create Users</button>
</form>

<!-- Spinner Overlay -->
<div id="loadingOverlay">
  <div class="spinner-border text-primary" role="status"></div>
  <div id="loadingMessage">Creating users...</div>
</div>

<!-- Styling Overrides -->
<style>
  #loadingOverlay {
    display: none;
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: linear-gradient(to right, #fdfbfb, #ebedee);
    z-index: 9999;
    text-align: center;
    padding-top: 20%;
  }

  .spinner-border {
    width: 4rem;
    height: 4rem;
    animation: spin 1s linear infinite;
  }

  #loadingMessage {
    font-size: 1.25rem;
    margin-top: 1rem;
    color: #6C5CE7;
    font-family: 'Poppins', sans-serif;
    animation: pulse 1.5s infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.6; }
    100% { opacity: 1; }
  }
</style>

<!-- Overlay Trigger -->
<script>
  const form = document.getElementById('userUploadForm');
  const overlay = document.getElementById('loadingOverlay');
  const msg = document.getElementById('loadingMessage');

  form.addEventListener('submit', () => {
    overlay.style.display = 'block';
    msg.innerText = 'Creating users...';
  });
</script>
